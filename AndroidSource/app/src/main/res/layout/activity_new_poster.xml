<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAppBg">

    <RelativeLayout
        android:id="@+id/layoutPdiHead"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/back_select"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/textDetailHead"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="发布动态"
            android:textColor="@color/colorPrimaryText"
            android:textSize="16sp"
            />

        <Button
            android:id="@+id/btnSend"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/send_select"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/pdiHeadDivider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/layoutPdiHead"
        android:background="@color/colorDivider"/>

    <ImageView
        android:id="@+id/imgNew"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/photo_select"
        />

    <EditText
        android:id="@+id/editSend"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/imgNew"
        android:layout_below="@id/pdiHeadDivider"
        android:background="@null"
        android:gravity="start"
        android:hint="分享新动态"
        android:maxEms="140"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/colorPrimaryText"
        android:textColorHint="@color/colorSecondaryText"
        android:textSize="15sp"
        />

</RelativeLayout>